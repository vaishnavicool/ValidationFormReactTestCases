    "@types/react-router-dom": "^5.3.3",
    "@types/redux-logger": "^3.0.9",
    "@types/redux-state-sync": "^3.1.2",
    "autoprefixer": "10.4.5",
    "axios": "^0.27.2",
    "bootstrap": "^5.1.3",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "exceljs": "^4.3.0",
    "file-saver": "^2.0.5",
    "json-server": "^0.17.0",
    "lodash": "^4.17.21",
    "node-sass": "^7.0.1",
    "react": "^18.1.0",
    "react-bootstrap": "^2.3.1",
    "react-data-table-component": "^7.5.0",
    "react-detect-click-outside": "^1.1.7",
    "react-dom": "^18.1.0",
    "react-ellipsis-text": "^1.2.1",
    "react-intl": "^5.25.1",
    "react-loading-skeleton": "^3.1.0",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-select": "^5.3.2",
    "react-toastify": "^8.2.0",
    "react-tooltip": "^4.2.21",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-state-sync": "^3.1.2",
    "sass": "^1.51.0",
    "styled-components": "^5.3.5",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "resolutions": {
    "autoprefixer": "10.4.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "json-server": "json-server --watch db.json --port 3004",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/*.tsx",
    "lint:fix": "eslint src --ext .tsx --fix",
    "lint:err": "eslint src  --ext .tsx --max-warnings 0",
    "prettify": "prettier src/*.tsx --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint:err"
    }
  },
  "prettier": {
    "semi": false
  },
  "lint-staged": {
    "*.(js|html|css)": [
      "prettier --write",
      "git add"
    ],
    ".js": [
      "lint:fix",
      "lint:err"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "react"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended"
    ],
    "rules": {
      "eqeqeq": "off",
      "no-useless-escape": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/alt-text": "off",
      "react/prop-types": "off",
      "react/display-name": "off",
      "react-hooks/exhaustive-deps": "off",
      "react/no-unknown-property": "warn",
      "no-console": "warn",
      "react/jsx-key": "warn",
      "react/react-in-jsx-scope": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/bootstrap": "^5.1.10",
    "@types/jest": "^28.1.7",
    "@types/webpack-env": "^1.16.4",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2"
  }
}
